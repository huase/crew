{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "target": "es2018",
    "lib": ["es2018"]
  },
  "include": ["./src", "./typings"],
  "exclude": ["**/*.spec.ts"]
}
